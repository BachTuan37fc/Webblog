@model aznews.Models.tblUser 
@using aznews.Utilities;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - NiceAdmin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: #f6f9ff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-login {
            background: white;
            border-radius: 16px;
            padding: 60px 50px;
            box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 600px;
        }

        .form-label {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .form-control {
            border-radius: 10px;
            padding: 14px;
            font-size: 1.1rem;
        }

        .form-check-label {
            font-size: 1rem;
        }

        .btn-primary {
            width: 100%;
            border-radius: 10px;
            padding: 12px;
            font-size: 1.1rem;
        }

        .small-text {
            font-size: 1rem;
        }

        .logo-text {
            font-weight: 700;
            color: #012970;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            font-size: 0.9rem;
            color: #888;
        }
    </style>
</head>

<body>

    <div class="card-login">
        <div class="text-center mb-5">
            <div class="logo-text">NiceAdmin</div>
            <h3 class="mb-1">Đăng nhập hệ thống</h3>
            <p class="text-muted small-text">Vui lòng nhập tài khoản và mật khẩu để tiếp tục</p>
        </div>

        <form method="post" asp-action="Login">
            <div class="mb-4">
                <label for="MaDG" class="form-label">Tên đăng nhập</label>
                <input type="text" name="MaDG" class="form-control" id="MaDG" required placeholder="Nhập mã độc giả">
            </div>

            <div class="mb-4">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input type="password" name="Password" class="form-control" id="Password" required placeholder="Nhập mật khẩu">
            </div>

            <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" id="remember" name="remember">
                <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
            </div>

            <button type="submit" class="btn btn-primary">Đăng nhập</button>

            <div class="text-center mt-4 small-text">
                Chưa có tài khoản? <a href="#">Đăng ký ngay</a>
            </div>
        </form>

        <footer class="mt-5">
            © 2025 <strong>NiceAdmin</strong>. All rights reserved.
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
