@model aznews.Models.tblUser
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm người dùng</h2>
    </div>

    <div class="container shadow p-5">
        <form method="post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>MaDG</label>
                    <input type="text" class="form-control" asp-for="MaDG" placeholder="MaDG...">
                    <span asp-validation-for="MaDG" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Enter the Email...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Password</label>
                    <input type="text" class="form-control" asp-for="Password" placeholder="Enter the order of item...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Role</label>
                    <input type="text" class="form-control" asp-for="Role"  placeholder="Enter the Role...">
                </div> 
            </div>

            <a asp-controller="User" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Save information
            </button>
        </form>
    </div>
</main>
