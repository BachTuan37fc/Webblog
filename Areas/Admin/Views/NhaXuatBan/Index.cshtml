@using aznews.Models;
@model IList<tblNhaXuatBan>
    
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
        <div class="pagetitle">
            <h2>Danh Sách Người Dùng</h2>

            <p>
                <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="NhaXuatBan" asp-action="Create">
                    <i class="bi bi-file-earmark-text me-1"></i>Thêm Nhà xuất bản</a>
                    <section class="section dashboard">
                        <div class="row">
                            <div class="col-12">
                                <div class="car recent-sales overflow-auto">
                                    <div class="card-body mt-4">
                                        <table class="table table-borderless datatable">
                                            <thead>
                                                <tr>
                                                    <th class="col-1 text-center">#</th>
                                                    <th class="col-3 text-center">TenNXB</th>
                                                    <th class="col-2 text-center">Email</th>
                                                    <th class="col-2 text-center">DiaChi</th>
                                                    <th class="col-1 text-center">SDT</th>
                                                    <th class="col-1 text-center">Functions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var item in Model) 
                                                {
                                                    <tr>
                                                        <td class="text-center" scope="row">@item.ID_NXB</td>
                                                        <td class="text-left text-primary" scope="row">
                                                            <a asp-area="Admin" asp-controller="NhaXuatBan"  asp-route-id="@item.ID_NXB">@item.TenNXB</a></td>
                                                           
                                                        <td class="text-center" scope="row">@item.Email</td>
                                                        <td class="text-center" scope="row">@item.DiaChi</td>
                                                        <td class="text-center" scope="row">@item.SDT</td>
                                          
                                                        <td class="text-center" scope="row">
                                                                <a asp-area="Admin" asp-controller="NhaXuatBan" asp-action="Edit" asp-route-id="@item.ID_NXB" class="btn btn-primary btn-sm" title="Edit the Menu"><i class="bi bi-pencil"></i></a>
                                                                <a asp-area="Admin" asp-controller="NhaXuatBan" asp-action="Delete" asp-route-id="@item.ID_NXB" class="btn btn-danger btn-sm" title="Delete the Menu"><i class="bi bi-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
            </p>
        </div>
    </main>