@model aznews.Models.tblNhaXuatBan
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới</h2>
    </div>

    <div class="container shadow p-5">
        <form method="post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>TenNXB</label>
                    <input type="text" class="form-control" asp-for="TenNXB" placeholder="Menu name...">
                    <span asp-validation-for="TenNXB" class="alert-danger"></span>
                </div>

                

                @* <div class="form-group col-md-6 mb-3">
                    <label>DiaChi</label>
                    <select asp-for="DiaChi" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div> *@

                <div class="form-group col-md-6 mb-3">
                    <label>SDT</label>
                    <input type="text" class="form-control" asp-for="SDT" placeholder="Enter the SDT...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email"  placeholder="Enter the order of item...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>DiaChi</label>
                    <input type="text" class="form-control" asp-for="DiaChi" placeholder="Enter the DiaChi...">
                </div> 

                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Visible
                    </label>
                </div>
            </div>

            <a asp-controller="NhaXuatBan" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Save information
            </button>
        </form>
    </div>
</main>
