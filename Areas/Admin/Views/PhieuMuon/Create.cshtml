@model aznews.Models.tblPhieuMuon
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Add a menu item</h2>
    </div>

    <div class="container shadow p-5">
        <form method="post" asp-area="Admin" asp-action="Create" asp-controller="PhieuMuon" enctype="multipart/form-data">
            <div class="form-row">
               
                <div class="form-group col-md-6 mb-3">
                    <label>MaDG</label>
                    <input type="text" class="form-control" asp-for="MaDG" placeholder="Enter the TacGia...">
                </div>
                
                <div class="form-group col-md-6 mb-3">
                    <label>NgayMuon</label>
                    <input type="datetime-local" class="form-control" asp-for="NgayMuon" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" readonly />

                </div>

                <div class="form-group col-md-6 mb-3">
                   <label>Ngày Trả</label>
<input type="date" class="form-control" asp-for="NgayTra" />

                </div> 
                <div class="form-group col-md-6 mb-3">
                    <label>TenSach</label>
                    @* <select asp-for="@Model.IdMCBNavigation.IdSachNavigation.TenSach" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select> *@
                    <select name="ID_Sach" class="form-control" asp-items="ViewBag.mnList">
</select>

                </div>

            
            

            <a asp-controller="PhieuMuon" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Save information
            </button>
            
        </form>
        </div>
    </div>
</main>
