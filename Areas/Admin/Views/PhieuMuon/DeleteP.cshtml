@model aznews.Models.tblPhieuMuon
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
        <div class="pagetitle">
            <h2>Confirm to delete a Sach</h2>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ID_PM">ID_PM</label>
                <input type="text" class="form-control mb-3" asp-for="ID_PM" disabled />
            </div>
            <div class="form-group col-md-6"></div>
                <label asp-for="MaDG">MaDG</label>
                <input type="text" class="form-control mb-3" asp-for="MaDG" disabled />
            </div>
            <div class="form-group col-md-6"></div>
                <label >TenSach</label>
                <input type="text" class="form-control mb-3" value="@Model.IdMCBNavigation.IdSachNavigation.TenSach" disabled />
            </div>
        </div>
        <!--  Begin Form -->
        <form asp-action="DeleteP" method="Post">
            <input type="hidden" asp-for="ID_PM" />
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-arrow-left-circle"></i> Go Back
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
</main>