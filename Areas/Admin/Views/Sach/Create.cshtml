@model aznews.Models.tblSach
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Add a menu item</h2>
    </div>

    <div class="container shadow p-5">
        <form method="post" asp-area="Admin" asp-action="Create" asp-controller="Sach" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>Ten Sach</label>
                    <input type="text" class="form-control" asp-for="TenSach" placeholder="Menu name...">
                    <span asp-validation-for="TenSach" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>TacGia</label>
                    <input type="text" class="form-control" asp-for="TacGia" placeholder="Enter the TacGia...">
                </div>
                
                <div class="form-group col-md-6 mb-3">
                    <label>NamXB</label>
                    <input type="text" class="form-control" asp-for="NamXB"  placeholder="Enter the order of item...">
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>MoTa</label>
                    <input type="text" class="form-control" asp-for="MoTa"  placeholder="Enter the MoTa...">
                </div> 
                <div class="form-group col-md-6 mb-3">
                    <label>NXB</label>
                    <select asp-for="ID_NXB" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Danh Muc</label>
                    <select asp-for="ID_DM" class="form-control"
                            asp-items="@(new SelectList(ViewBag.sList, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Hinh</label>
                    <input type="file" class="form-control" name="Hinh" accept="image/*">
                </div> 
                <div class="form-group col-md-6 mb-3">
    <label>Số lượng bản sao</label>
    <input type="number" class="form-control" asp-for="SoLuong" placeholder="Nhập số lượng...">
</div>
            </div>

            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Save information
            </button>
        </form>
    </div>
</main>
